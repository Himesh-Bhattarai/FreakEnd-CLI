
# Security Headers Configuration
# Enable/disable security headers middleware
ENABLE_SECURITY_HEADERS=true

# Content Security Policy (CSP)
CSP_DEFAULT_SRC='self'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_SCRIPT_SRC='self'
CSP_IMG_SRC='self' data: https:
CSP_CONNECT_SRC='self'
CSP_FONT_SRC='self' https: data:
CSP_OBJECT_SRC='none'
CSP_MEDIA_SRC='self'
CSP_FRAME_SRC='none'
CSP_UPGRADE_INSECURE_REQUESTS=false
CSP_REPORT_ONLY=false

# HTTP Strict Transport Security (HSTS)
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false

# X-Content-Type-Options
X_CONTENT_TYPE_OPTIONS=true

# X-Frame-Options (deny, sameorigin, allow-from)
X_FRAME_OPTIONS=deny

# X-XSS-Protection
X_XSS_PROTECTION=true

# Referrer Policy
REFERRER_POLICY=strict-origin-when-cross-origin

# Permissions Policy (JSON format)
PERMISSIONS_POLICY={"camera": ["self"], "microphone": ["self"], "geolocation": ["self"]}

# Remove X-Powered-By header
HIDE_POWERED_BY=true

# Cross-Origin policies
CROSS_ORIGIN_EMBEDDER_POLICY=false
CROSS_ORIGIN_OPENER_POLICY=false
CROSS_ORIGIN_RESOURCE_POLICY=false

# DNS Prefetch Control
DNS_PREFETCH_CONTROL=false

# Expect-CT (deprecated)
EXPECT_CT=false

# Origin Agent Cluster
ORIGIN_AGENT_CLUSTER=true

# Custom security headers (JSON format)
CUSTOM_SECURITY_HEADERS={"X-Custom-Header": "custom-value"}
